{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success">{{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-danger">{{ error_warning }}</div>
  {% endif %}
  <div class="row">
    <div id="content" class="col-sm-12">
      {{ content_top }}
      <div class="row">
        <div class="col-sm-6">
          <div class="well">
            <h2>{{ text_new_customer }}</h2>
            <br />
            <br />
            <p>{{ text_register_account }}</p>
            <a href="{{ register }}" class="btn btn-default btn-block btn-register">{{ button_continue }}</a></div>
        </div>
        <div class="col-sm-6">
          <div class="well">
            <h2>{{ text_returning_customer }}</h2>
            <br />
            <br />
            <form action="{{ action }}" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="glyphicon glyphicon-user"></i>
                  </span>
                  <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                </div>
              </div>
              <div class="form-group">
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="glyphicon glyphicon-lock"></i>
                  </span>
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
                </div>
              <div class="text-left"><a href="{{ forgotten }}" >{{ text_forgotten }}</a></div>
              </div>
              <input type="submit" value="{{ button_login }}" class="btn btn-primary btn-block" />
              {% if redirect %}
              <input type="hidden" name="redirect" value="{{ redirect }}" />
              {% endif %}
            </form>
          </div>
        </div>
      </div>
      {{ content_bottom }}
    </div>
  </div>
</div>
{{ footer }}
