{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  {% if success %}
  <div class="alert alert-success">{{ success }}</div>
  {% endif %}
  {% if error_warning %}
  <div class="alert alert-warning">{{ error_warning }}</div>
  {% endif %}
  <div class="row">
    <div id="content" class="col-sm-12">
      {{ content_top }}
      <h2>{{ text_address_book }}</h2>
      {% if addresses %}
      <div class="table-responsive">
        <table class="table">
          {% for result in addresses %}
          <tr>
            <td class="text-left">{{ result.address }}</td>
            <td class="text-right"><a href="{{ result.update }}" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-danger"><i class="icon ion-ios-compose-outline"></i></a><a href="{{ result.delete }}" data-toggle="tooltip" title="{{ button_delete }}" class="btn btn-danger"><i class="icon ion-ios-trash-outline"></i></a></td>
          </tr>
          {% endfor %}
        </table>
      </div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      <div class="buttons clearfix">
        <div class="pull-left"><a href="{{ back }}" class="btn btn-default">{{ button_back }}</a></div>
        <div class="pull-right"><a href="{{ add }}" class="btn btn-primary">{{ button_new_address }}</a></div>
      </div>
      {{ content_bottom }}
    </div>
  </div>
</div>
{{ footer }}
